@model blogSite.Model.Entities.FormContact
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Contact</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Blog Site</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->  
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('@Url.Content("~/assets/img/contact-bg.jpg")')">    
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="page-heading">
                        <h1>Bize Ulaşın</h1>
                        <span class="subheading">Bir sorunuz var mı? Bize yazın, size dönüş sağlayalım.</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content-->
    <main class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <p>İletişime geçmek için, aşağıdaki formu doldurun en kısa srede sizinle iletişime geçelim!</p>
                    <div class="my-5">                       
                        <form asp-controller="Home" asp-action="SendForm" method="post">
                            <div class="form-floating">
                                <input class="form-control" name="NameSurname" type="text" placeholder="Enter your name..." data-sb-validations="required" />
                                <label for="NameSurname">İsim</label>
                                <div class="invalid-feedback" data-sb-feedback="İsim:required">İsim, soisim gerekli.</div>
                            </div>
                            <div class="form-floating">
                                <input class="form-control" name="Email" type="Email" placeholder="Enter your email..." data-sb-validations="required,email" />
                                <label for="email">Email adresi</label>
                                <div class="invalid-feedback" data-sb-feedback="email:required">E- mail adresi gerekli.</div>
                                <div class="invalid-feedback" data-sb-feedback="email:email">E - mail boş olamaz.</div>
                            </div>
                            <div class="form-floating">
                                <input class="form-control" name="PhoneNumber" type="tel" placeholder="Enter your phone number..." data-sb-validations="required" />
                                <label for="PhoneNumber">Telefon Numarası</label>
                                <div class="invalid-feedback" data-sb-feedback="phone:required">Telefon Numarası gerekli.</div>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control" name="Message" placeholder="Enter your message here..." style="height: 12rem" data-sb-validations="required"></textarea>
                                <label for="Message">Mesajınız</label>
                                <div class="invalid-feedback" data-sb-feedback="message:required">Mesaj alanını boş bırakmayınız.</div>
                            </div>
                            <br />
                            <!-- Submit success message-->
                            <!---->
                            <!-- This is what your users will see when the form-->
                            <!-- has successfully submitted-->
                            <div class="d-none" id="submitSuccessMessage">
                                <div class="text-center mb-3">
                                    <div class="fw-bolder">Form gönderimi başarılı!</div>                                 
                                    <br />                                  
                                </div>
                            </div>
                            <!-- Submit error message-->
                            <!---->
                            <!-- This is what your users will see when there is-->
                            <!-- an error submitting the form-->
                            <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Gönderimde hata oldu!</div></div>
                            <!-- Submit Button-->
                            <button type="submit" class="btn btn-primary">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Footer-->
    <footer class="border-top">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="#!">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#!">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#!">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div class="small text-center text-muted fst-italic">Site yeniden tasarlandı - 2025</div>
                </div>
            </div>
        </div>
    </footer>
    @section Scripts {
        <script>
            window.addEventListener('DOMContentLoaded', function () {
                var formStatus = '@TempData["FormStatus"]';

                if (formStatus === 'success') {
                    document.getElementById("submitSuccessMessage").classList.remove("d-none");
                } else if (formStatus === 'error') {
                    document.getElementById("submitErrorMessage").classList.remove("d-none");
                }
            });
        </script>
    }
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>   
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>
</html>
