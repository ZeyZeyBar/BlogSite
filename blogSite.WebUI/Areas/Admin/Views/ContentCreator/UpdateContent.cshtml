@model blogSite.Model.Entities.HomeDetail
@{
    ViewData["Title"] = "UpdateContent";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Blog Site Admin Panel</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Logout Modal-->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Ana Sayfa İçerik </h1>
                <p class="mb-4">
                    Ana Sayfa içerikleri. Yeni içerik girin
                </p>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Ana Sayfa İçerikleri </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Ana Sayfa İçerik Güncelleme </h2>

                                            <ul class="nav navbar-right panel_toolbox">
                                                <li>
                                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li>
                                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <form asp-area="Admin" asp-controller="ContentCreator" asp-action="UpdateContent" method="post" novalidate enctype="multipart/form-data">
                                                <span class="section">Ana Sayfa içerik Güncelleme</span>
                                                <div class="field item form-group">
                                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Başlık<span class="required">*</span></label>
                                                    <div class="col-md-6 col-sm-6">
                                                        <input class="form-control" asp-for="Title" placeholder=" @Model.Title*" required="required" />
                                                    </div>
                                                </div>

                                                <div class="field item form-group">
                                                    <label class="col-form-label col-md-3 col-sm-3  label-align">İçerik <span class="required">*</span></label>
                                                    <div class="col-md-6 col-sm-6">
                                                        <input class="form-control" asp-for="Details" placeholder=" @Model.Details*" />
                                                    </div>
                                                </div>

                                                <div class="field item form-group">
                                                    <label class="text-black" for="fname">Resim</label>
                                                    <br />
                                                    @if (Model.Image != null)
                                                    {
                                                        string imageBase64 = Convert.ToBase64String(Model.Image);
                                                        string imageSrc = $"data:image/png;base64,{imageBase64}";
                                                        <img src="@imageSrc" alt="Image" width="200" />
                                                    }
                                                </div>

                                                <div class="field item form-group">
                                                    <label for="Image">Resim Seç:</label>
                                                    <input type="file" id="uploadedImage" name="uploadedImage" accept="image/*" />
                                                </div>

                                                <div class="field item form-group">
                                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Aktif Mi <span class="@Model.IsActive">*</span></label>
                                                    <div class="col-md-6 col-sm-6">
                                                        <input class="form-control" asp-for="IsActive" placeholder=" Aktif Mi*" />
                                                    </div>
                                                </div>

                                                <div class="ln_solid">
                                                    <div class="form-group">
                                                        <div class="col-md-6 offset-md-3">
                                                            <button type='submit' class="btn btn-primary">Kaydet</button>
                                                            <button type='reset' class="btn btn-success">Temizle</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            @if (TempData["SuccessMessage"] != null)
                                            {
                                                <div class="alert alert-success">
                                                    @TempData["SuccessMessage"]
                                                </div>
                                            }

                                            @if (TempData["ErrorMessage"] != null)
                                            {
                                                <div class="alert alert-danger">
                                                    @TempData["ErrorMessage"]
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>
    <!-- Page level plugins -->
    <script src="/vendor/chart.js/Chart.bundle.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="/js/demo/chart-area-demo.js"></script>
    <script src="/js/demo/chart-pie-demo.js"></script>
</body>
</html>




